{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "if echo \"$TOOL_INPUT\" | grep -qE '(git\\s+(commit|push)|git\\s+.*--amend)'; then /Users/samuelbaudon/easyco-onboarding/.claude/hooks/scan-secrets.sh; else echo '{\"status\": \"continue\"}'; fi"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "/Users/samuelbaudon/.claude/plugins/cache/claude-code-plugins/project-sync/1.0.0/hooks-handlers/session-start.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": {
          "tool_name": "TodoWrite"
        },
        "hooks": [
          {
            "type": "command",
            "command": "/Users/samuelbaudon/.claude/plugins/cache/claude-code-plugins/project-sync/1.0.0/hooks-handlers/post-todowrite.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "afplay /System/Library/Sounds/Glass.aiff"
          }
        ]
      }
    ]
  }
}
