{
  "buildCommand": "npm run build",
  "installCommand": "npm install",
  "framework": "nextjs",
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        }
      ]
    }
  ],
  "crons": [
    {
      "path": "/api/alerts/run",
      "schedule": "0 8 * * *"
    },
    {
      "path": "/api/cron/check-metrics",
      "schedule": "0 9 * * *"
    }
  ]
}
